<aside class="sidebar">
    <div class="sidebar-header">
        <a href="/" style="text-decoration: none; color: inherit;">
            <h1>AEM Notes</h1>
        </a>
        <label class="theme-switch" title="Toggle theme">
            <input type="checkbox" id="theme-toggle" />
            <span class="slider"></span>
        </label>
    </div>

    <div class="sidebar-content">
        <% units.forEach(unit => { %>
            <div class="unit">
                <button class="unit-btn <%= unit.lectures.some(lecture => lecture.id === currentLectureId) ? 'is-open' : '' %>">
                    <%= unit.title %>
                </button>
                <ul class="lecture-nav <%= unit.lectures.some(lecture => lecture.id === currentLectureId) ? 'is-open' : '' %>">
                    <% if (unit.lectures && unit.lectures.length > 0) { %>
                        <% unit.lectures.forEach(lecture => { %>
                            <li>
                                <a href="/lectures/<%= lecture.id %>" class="lecture-link <%= currentLectureId === lecture.id ? 'active' : '' %>">
                                    <%= lecture.title %>
                                </a>
                            </li>
                        <% }) %>
                    <% } else { %>
                        <li>No lectures uploaded yet</li>
                    <% } %>
                </ul>
            </div>
        <% }) %>

        <div class="unit">
            <button class="unit-btn">Textbooks</button>
            <ul class="lecture-nav">
                <li><a href="/textbooks/kreyszig" class="lecture-link">Erwin Kreyszig</a></li>
                <li><a href="/textbooks/additional" class="lecture-link">Additional Resources</a></li>
            </ul>
        </div>

        <div class="unit">
            <button class="unit-btn">Practice</button>
            <ul class="lecture-nav">
                <li><a href="/practice/assignments" class="lecture-link">Assignments</a></li>
                <li><a href="/practice/mock-tests" class="lecture-link">Mock Tests</a></li>
            </ul>
        </div>
    </div>
</aside>